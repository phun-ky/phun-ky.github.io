*.ph,
*.ph::after,
*.ph::before
  margin 0
  padding 0
  word-break break-word
  box-sizing border-box
  -webkit-font-smoothing antialised

html
  font-family system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji

html, body
  height 100%
  min-height 100%


body
  background-color #181a22
  color #839496
  padding 0
  margin 0
  line-height 1.5
  font-family Poppins,ui-sans-serif,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica Neue,Arial,Noto Sans,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol,Noto Color Emoji

main.ph
  flex-grow 1

.ph.container
  max-width 48rem
  width 100%
  margin-left auto
  margin-right auto
  margin-top 2.5rem
  margin-bottom 2.5rem

.ph.container.frontpage
  max-width 1024px
  margin-top 1.25rem
  margin-bottom 1.25rem

footer.ph.footer
	font-size 1.25rem
	z-index 100
  flex-grow 0
  margin-top auto

.ph.app
  display flex
  flex-direction column
  height 100%
  min-height 100%
  padding 1.25rem

a.ph,
a.ph:visited,
a.ph:active
  color #ff9900
  font-weight 500

a.ph:hover
  color #E4E4E7


p,
p.ph,
.ph.byline
  font-style normal
  max-width 65ch
  font-size 1rem
  line-height 1.75rem
  color #839496
  margin-top 1.25em
  margin-bottom 1.25em

article.ph
  color #839496
  font-size 1rem
  line-height 1.75rem

p.lead,
p.ph.lead
  color #E4E4E7
  font-weight 600
  line-height 1.75rem
  margin-bottom 2.5rem
  font-size 1.125rem

p.ph.lead.frontpage
  padding-top 2.5rem
  padding-bottom 2.5rem
  margin 0
  font-weight normal
  color inherit


h1,h2,h3,h4,h5,h6
  &.ph
    color #E4E4E7

h1.ph
  margin-bottom 2.5rem
  font-size 3.75rem
  font-weight 700
  line-height 1.375

h1.ph.frontpage
  margin-bottom 2.5rem
  font-size 3rem
  line-height 1.375
  @media screen and (min-width: 1024px)
    font-size 4.75rem

h2.ph
  font-size 1.75rem
  line-height 1.3333333
  margin-bottom 1rem
  margin-top 2rem

h3.ph
  font-size 1.5rem
  line-height 1.3333333
  margin-bottom 1rem
  margin-top 1rem

h4.ph
  font-size 1.25rem
  line-height 1.3333333
  margin-bottom 1rem
  margin-top 1rem


.demo
  display flex
  flex-direction column
  align-items center
  justify-content center

.demo > *
  margin-bottom 2rem



.ph.glare
  background linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.2) 50%, rgba(255,255,255,0) 51% )
  position fixed
  top 0
  left 0
  bottom 0
  right 0
  pointer-events none

.ph.showcase
  display grid
  grid-gap 5rem
  background-color #f5f5f5
  padding-top 5rem
  padding-bottom 5rem
  border-radius .375rem

header.ph.header
  display flex
  justify-content flex-start
  align-items center
  flex-grow 0
  grid-gap 1rem
  min-height 5.5rem

.ph sup,
.ph sup a
  font-size 0.5rem
  font-weight normal

figcaption.ph
  font-size 0.875rem
  color #839496
  max-width 65ch

figcaption.ph
  & a
    opacity 0.9
    font-weight normal


ul.ph, ol.ph
  padding-left 1rem
  margin-top 1.25em
  margin-bottom 1.25em
  & ul.ph,
  & ol.ph
    margin-top 0
    margin-bottom 0


blockquote.ph
  font-weight 500
  font-size 1.125rem
  font-style italic
  line-height 1.75rem
  position relative
  border-radius 0.375rem
  padding 3rem 1.1428571em 0.8571429em 2rem
  @media screen and (min-width: 1024px)
    padding 5rem 1.1428571em 0.8571429em 4rem


blockquote.ph
  &::before
    content "â€œ"
    font-size 10rem
    line-height 10rem
    position absolute
    top 0
    left 0


hr.ph
  border none
  height 2pt
  background-color #839496
  width 80%
  margin-left 0
  margin-right auto
  margin-bottom 3em
  margin-top 3em

.ph.category-navigation
  display none
  padding 0
  padding-top 5rem
  padding-bottom 5rem
  @media screen and (min-width: 1024px)
    display block

.ph.posts
  list-style none
  padding 0
  display grid
  margin 0
  grid-gap 5rem
  padding-top 5rem
  padding-bottom 5rem
  grid-template-columns 1fr

.ph.post
  & a.ph
    color inherit
    text-decoration inherit

.ph.post
  & a.ph:hover
    & .ph.post-title
      text-decoration underline

.ph.post
  & .ph.post-title
    margin 0
    line-height 1.375
    font-size 2.25rem
    font-weight 700


.ph.post
  & .ph.post-description
    font-size 1rem
    line-height 1.75
    font-weight normal


.ph.post
  & .ph.post-meta
    font-size 0.875rem
    line-height 1.75
    font-weight normal
    font-style inherit


.ph.post
  & .ph.post-meta
    & a.ph
      color #ff9900
      text-decoration underline
      &:hover
        color #f5f5f5

.ph.frontpage-posts
  display grid
  grid-template-columns 1fr
  grid-gap 5rem
  @media screen and (min-width: 1024px)
    grid-template-columns 2fr 1fr


.ph.categories-title
  text-transform uppercase
  font-weight 700
  font-size .875rem
  padding-top 0.75rem
  padding-bottom 0.5rem
  margin 0
  line-height 1.25rem
  color #839496


.ph.categories
  list-style none
  padding 0

.ph.categories
  & .ph.category-link
    text-decoration none
    font-weight 500
    line-height 2
    font-size 1.25rem

.ph.categories
  & .ph.category-link
    &:hover
      text-decoration underline

.ph.tags-title
  text-transform uppercase
  font-weight 700
  font-size .875rem
  padding-top 0.75rem
  padding-bottom 0.5rem
  margin 0
  line-height 1.25rem
  color #839496


.ph.tags
  list-style none
  padding 0
  display flex
  flex-wrap wrap
  grid-gap 0 0.5rem

.ph.tags
  & .ph.tag-link
    text-decoration none
    font-weight normal
    line-height 1.25
    font-size 1rem
    text-transform lowercase

.ph.tags
  & .ph.tag-link
    &:hover
      text-decoration underline


figure.ph
  display flex
  flex-direction column

figure.ph,
article.ph
  & img
    max-width 100%


.ph.message
  background-color rgba(131, 148, 150,0.1)
  border-radius 0.375rem
  border-top-left-radius 0
  border-bottom-left-radius 0
  color #839496
  font-size 0.875em
  line-height 1.7142857
  margin-bottom 1.7142857em
  margin-top 1.7142857em
  overflow-x auto
  padding 0.8571429em 1.1428571em
  border-left 4pt solid #d29922

.ph.message
  & .ph.description
    margin-top 1rem
    margin-bottom 1rem

.ph.message
  & .ph.title
    font-weight 500
    line-height 2
    font-size 1.25rem
    color #d29922

    & .ph.icon
      height 1.125rem
      width 1.125rem
      margin-right 0.5rem
      fill currentColor


article.ph
  & p.ph,
  & li.ph
    & > code.language-none
      background #002b36
      font-size 0.875rem
      padding 0.25rem 0.5rem
      border-radius 0.375rem


.cp_embed_wrapper
  border-radius 0.375rem
  overflow hidden
  background-color rgba(131, 148, 150,0.1)


.ph.breadcrumbs
  padding 0
  margin 0
  padding-top 1.25rem
  padding-bottom 1.25rem
  list-style none
  display flex
  justify-content flex-start
  align-items center

  & li:not(:first-of-type)
    color #E4E4E7
    display flex
    justify-content flex-start
    align-items center


  & a
    color #E4E4E7
    text-decoration none
    font-size 1.25rem
    line-height 1.75rem
    font-weight 600
    &:hover
      color #ff9900
      text-decoration underline

.ph.header-menu
  margin-left auto
  min-height 3rem
