@import './variables.styl'

.ph.showcase
  display grid
  grid-gap 5rem
  background-color var(--ph-color-text-accent)
  padding-top 5rem
  padding-bottom 5rem
  border-radius .375rem


.ph sup,
.ph sup a
  font-size 0.5rem
  font-weight normal

figcaption.ph
  font-size 0.875rem
  color var(--ph-color-text)
  max-width 65ch

figcaption.ph
  & a
    opacity 0.9
    font-weight normal


ul.ph, ol.ph
  padding-left 1rem
  margin-top 1.25em
  margin-bottom 1.25em
  & ul.ph,
  & ol.ph
    margin-top 0
    margin-bottom 0


blockquote.ph
  font-weight 500
  font-size 1.125rem
  font-style italic
  line-height 1.75rem
  position relative
  border-radius 0.375rem
  padding 3rem 1.1428571em 0.8571429em 2rem
  @media screen and (min-width: 1024px)
    padding 5rem 1.1428571em 0.8571429em 4rem


blockquote.ph
  &::before
    content "â€œ"
    font-size 10rem
    line-height 10rem
    position absolute
    top 0
    left 0


hr.ph
  border none
  height 2pt
  background-color var(--ph-color-text)
  width 80%
  margin-left 0
  margin-right auto
  margin-bottom 3em
  margin-top 3em

.ph.category-navigation
  display none
  padding 0
  padding-top 5rem
  padding-bottom 5rem
  @media screen and (min-width: 1024px)
    display block

.ph.posts
  list-style none
  padding 0
  display grid
  margin 0
  grid-gap 5rem
  padding-top 5rem
  padding-bottom 5rem
  grid-template-columns 1fr

.ph.post
  & a.ph
    color inherit
    text-decoration inherit

.ph.post
  & a.ph:hover
    & .ph.post-title
      text-decoration underline

.ph.post
  & .ph.post-title
    margin 0
    line-height 1.375
    font-size 2.25rem
    font-weight 700


.ph.post
  & .ph.post-description
    font-size 1rem
    line-height 1.75
    font-weight normal


.ph.post
  & .ph.post-meta
    font-size 0.875rem
    line-height 1.75
    font-weight normal
    font-style inherit


.ph.post
  & .ph.post-meta
    & a.ph
      color var(--ph-color-link)
      text-decoration underline
      &:hover
        color var(--ph-color-link-hover)

.ph.frontpage-posts
  display grid
  grid-template-columns 1fr
  grid-gap 5rem
  @media screen and (min-width: 1024px)
    grid-template-columns 2fr 1fr


.ph.categories-title
  text-transform uppercase
  font-weight 700
  font-size .875rem
  padding-top 0.75rem
  padding-bottom 0.5rem
  margin 0
  line-height 1.25rem
  color var(--ph-color-text)


.ph.categories
  list-style none
  padding 0

.ph.categories
  & .ph.category-link
    text-decoration none
    font-weight 500
    line-height 2
    font-size 1.25rem

.ph.categories
  & .ph.category-link
    &:hover
      text-decoration underline

.ph.tags-title
  text-transform uppercase
  font-weight 700
  font-size .875rem
  padding-top 0.75rem
  padding-bottom 0.5rem
  margin 0
  line-height 1.25rem
  color var(--ph-color-text)


.ph.tags
  list-style none
  padding 0
  display flex
  flex-wrap wrap
  grid-gap 0 0.5rem

.ph.tags
  & .ph.tag-link
    text-decoration none
    font-weight normal
    line-height 1.25
    font-size 1rem
    text-transform lowercase

.ph.tags
  & .ph.tag-link
    &:hover
      text-decoration underline


figure.ph
  display flex
  flex-direction column

figure.ph,
article.ph
  & img
    max-width 100%


.ph.message
  background-color var(--ph-color-well-background)
  border-radius 0.375rem
  border-top-left-radius 0
  border-bottom-left-radius 0
  color var(--ph-color-text)
  font-size 0.875em
  line-height 1.7142857
  margin-bottom 1.7142857em
  margin-top 1.7142857em
  overflow-x auto
  padding 0.8571429em 1.1428571em
  border-left 4pt solid var(--ph-color-notice-warning)

.ph.message
  & .ph.description
    margin-top 1rem
    margin-bottom 1rem

.ph.message
  & .ph.title
    font-weight 500
    line-height 2
    font-size 1.25rem
    color var(--ph-color-notice-warning)

    & .ph.icon
      height 1.125rem
      width 1.125rem
      margin-right 0.5rem
      fill currentColor


article.ph
  & p.ph,
  & li.ph
    & > code.language-none
      background var(--ph-color-code-background)
      color var(--ph-color-code)
      font-size 0.875rem
      padding 0.25rem 0.5rem
      border-radius 0.375rem


.cp_embed_wrapper
  border-radius 0.375rem
  overflow hidden
  background-color var(--ph-color-well-background)


.ph.breadcrumbs
  padding 0
  margin 0
  padding-top 1.25rem
  padding-bottom 1.25rem
  list-style none
  display flex
  justify-content flex-start
  align-items center

  & li:not(:first-of-type)
    color var(--ph-color-text-accent)
    display flex
    justify-content flex-start
    align-items center


  & a
    color var(--ph-color-text-accent)
    text-decoration none
    font-size 1.25rem
    line-height 1.75rem
    font-weight 600
    &:hover
      color var(--ph-color-link-hover)
      text-decoration underline



.ph.sustainable-verification
  display flex
  grid-gap 1rem
  flex-wrap wrap

