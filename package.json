{
  "name": "phun-ky.github.io",
  "version": "1.0.0",
  "type": "module",
  "description": "Website",
  "main": "index.html",
  "scripts": {
    "clean": "rm -rf dist/*",
    "assets": "mkdir -p dist && cp -a ./src/assets/. ./dist/",
    "prebuild": "npm run clean && npm run assets && node scripts/posts/convert-posts.js && node scripts/posts/frontpage-posts.js && node scripts/posts/category.js && node scripts/posts/tags.js",
    "build": "rollup -c rollup.config.js",
    "postbuild": "bash -c 'mv -f ./dist/*.{js,map} ./dist/js'",
    "build:watch": "rollup -c rollup.config.js -w",
    "commit": "git cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phun-ky/phun-ky.github.io.git"
  },
  "author": "Alexander Vassbotn RÃ¸yne-Helgesen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phun-ky/phun-ky.github.io/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  },
  "engines": {
    "node": ">=18.16.0",
    "npm": ">=9.5.1"
  },
  "homepage": "https://github.com/phun-ky/phun-ky.github.io#readme",
  "devDependencies": {
    "@ironkinoko/rollup-plugin-styles": "^4.0.3",
    "@markdoc/markdoc": "^0.3.2",
    "@rollup/plugin-commonjs": "^25.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.1",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "cssnano": "^6.0.0",
    "eslint": "^8.25.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-compat": "^4.1.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "git-cz": "^4.9.0",
    "glob": "^10.3.5",
    "htmlparser2": "^9.0.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.7.1",
    "prettier-eslint": "^15.0.1",
    "rollup": "^3.22.0",
    "rollup-plugin-analyzer": "^4.0.0",
