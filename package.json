    "cssnano": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-compat": "^4.2.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "git-cz": "^4.9.0",
    "glob": "^10.3.7",
    "htmlparser2": "^9.0.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "prettier-eslint": "^15.0.1",
